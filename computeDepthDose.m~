function depthDoseLUT = computeDepthDose(max_depth,d0, depth_resolution)


for i = 1:
    D = depth_from_skin/d0;

    %Depth intensity calculation based on provided zones.
    if D >= 0 && D <= 1 
        P1 = [0 0];
        P2 = [1 1];
        depthDoseLUT = compute_linear_function(P1,P2,D);
    elseif D > 1 && D < 11
        P1 = [1 1];
        P2 = [11 0];
        depthDoseLUT = compute_linear_function(P1,P2,D);
    else
        depthDoseLUT = 0;
    end
end